PoweredByText.BackgroundTransparency = 1
PoweredByText.Text = "Powered By: LootLabs"
PoweredByText.TextColor3 = Color3.fromRGB(220, 180, 255)
PoweredByText.Font = Enum.Font.GothamMedium
PoweredByText.TextSize = 18
PoweredByText.TextXAlignment = Enum.TextXAlignment.Center
PoweredByText.Parent = MainFrame

-- Function to animate loading bar and fade whole UI + outline together
local function animateLoadingBar(duration)
    local startTime = tick()

    local connection
    connection = RunService.Heartbeat:Connect(function()
        local elapsed = tick() - startTime
        local progress = math.clamp(elapsed / duration, 0, 1)
        LoadingBarFill.Size = UDim2.new(progress, 0, 1, 0)

        if progress >= 1 then
            connection:Disconnect()

            local tweenInfo = TweenInfo.new(1.5, Enum.EasingStyle.Quad)

            local tweens = {}

            -- Fade main frame background
            table.insert(tweens, TweenService:Create(MainFrame, tweenInfo, {BackgroundTransparency = 1}))

            -- Fade outline background
            table.insert(tweens, TweenService:Create(Outline, tweenInfo, {BackgroundTransparency = 1}))

            -- Fade image
            table.insert(tweens, TweenService:Create(Image, tweenInfo, {ImageTransparency = 1}))

            -- Fade text
            table.insert(tweens, TweenService:Create(TitleText, tweenInfo, {TextTransparency = 1}))
            table.insert(tweens, TweenService:Create(PoweredByText, tweenInfo, {TextTransparency = 1}))

            -- Fade loading bars
            table.insert(tweens, TweenService:Create(LoadingBarFill, tweenInfo, {BackgroundTransparency = 1}))
            table.insert(tweens, TweenService:Create(LoadingBarBackground, tweenInfo, {BackgroundTransparency = 1}))

            -- Play all tweens simultaneously
            for _, tween in ipairs(tweens) do
                tween:Play()
            end

            -- Wait for main frame fade to finish
            tweens[1].Completed:Wait()

            ScreenGui:Destroy()
        end
    end)
end

animateLoadingBar(5)
